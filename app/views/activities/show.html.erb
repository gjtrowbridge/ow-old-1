
<% @page_title = "Show Activity: #{@activity.name}" %>

<%= link_to("<< Back to List", activities_path, :class => 'back-link') %>

<div class="activity show">
  <h2>Show Activity</h2>

  <table summary="Activity detail view">
    <tr>
      <th>Created By</th>
      <td><%= @creator %></td>
    </tr>
  	<tr>
      <th>Name</th>
      <td><%= @activity.name %></td>
    </tr>
    <tr>
      <th>Organization</th>
      <td><%= @activity.organization %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @activity.description %></td>
    </tr>
    <tr>
      <th>How Do I Sign Up?</th>
      <td><%= @activity.signup_instructions %></td>
    </tr>
    <tr>
      <th>Requirements?</th>
      <td><%= @activity.requirements %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @activity.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @activity.updated_at %></td>
    </tr>
  </table>
  
</div>