<% @page_title = "Delete Activity: #{@activity.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="activity delete">
  <h2>Delete Activity</h2>
  
  <%= form_for(:activity, :url => {:action => 'destroy', :id => @activity.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this activity?</p>
  
    <p class="reference-name"><%= @activity.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Activity") %>
    </div>
    
  <% end %>
</div>
